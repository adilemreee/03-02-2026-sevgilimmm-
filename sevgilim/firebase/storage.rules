rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isSignedIn() {
      return request.auth != null && request.auth.uid != null;
    }

    function userDocument() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid));
    }

    function hasRelationship() {
      return isSignedIn()
          && firestore.exists(/databases/(default)/documents/users/$(request.auth.uid))
          && userDocument().data.relationshipId != null;
    }

    function getRelationshipId() {
      return hasRelationship() ? userDocument().data.relationshipId : null;
    }

    function isRelationshipMember(relId) {
      return hasRelationship() && getRelationshipId() == relId;
    }

    function isDeleteOperation() {
      return request.resource == null;
    }

    function isVaultContentTypeAllowed() {
      return request.resource != null
          && (
              request.resource.contentType.matches('image/.*')
              || request.resource.contentType.matches('video/.*')
              || request.resource.contentType == 'application/octet-stream'
          );
    }

    function isWithinVaultSizeLimit() {
      return request.resource == null
          || request.resource.size == null
          || request.resource.size <= 50 * 1024 * 1024;
    }

    // Profile images - only owner can upload
    match /profiles/{userId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Stories
    match /relationships/{relationshipId}/stories/{fileName} {
      allow read: if isSignedIn();
      allow write: if isSignedIn()
          && request.resource.size < 10 * 1024 * 1024
          && request.resource.contentType.matches('image/.*');
      allow delete: if isSignedIn();
    }

    // Story thumbnails
    match /relationships/{relationshipId}/stories/thumbnails/{fileName} {
      allow read: if isSignedIn();
      allow write: if isSignedIn()
          && request.resource.size < 2 * 1024 * 1024
          && request.resource.contentType.matches('image/.*');
      allow delete: if isSignedIn();
    }

    // Surprises klasörü - authentication gerekli
    match /surprises/{relationshipId}/{fileName} {
      allow read, write: if isSignedIn();
    }

    // Relationship photos
    match /relationships/{relationshipId}/photos/{allPaths=**} {
      allow read, write: if isRelationshipMember(relationshipId);
    }

    // Relationship memories
    match /relationships/{relationshipId}/memories/{allPaths=**} {
      allow read, write: if isRelationshipMember(relationshipId);
    }

    // Chat messages
    match /relationships/{relationshipId}/messages/{allPaths=**} {
      allow read, write: if isRelationshipMember(relationshipId);
    }

    // Secret vault media
    match /relationships/{relationshipId}/secretVault/{filePath=**} {
      allow read: if isRelationshipMember(relationshipId);

      allow write: if isRelationshipMember(relationshipId)
          && (isDeleteOperation()
              || (isVaultContentTypeAllowed()
                  && isWithinVaultSizeLimit()));
    }
  }
}
